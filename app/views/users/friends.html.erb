<h2>Friends</h2>
  <table>
    <thead>
      <tr>
        <th>Friend</th>
<th colspan="3"></th>
      </tr>
</thead>

    <tbody>
    <% @friendships.each do |friendship| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even')%>">
        <td>
          <%= friendship.friend.username %>
        </td>
<td>
<%= link_to "Remove friend", friendship_path(user_id: current_user.id, friend_id: friendship.friend), method: :delete  %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to "Find Friends", users_path %>
<% end %>
