<h1><%= content_for(:title, "Following") %></h1>
<h2>Following</h2>

<% if @friendships.empty? %>
  <p>You follow no one. Shame on you</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Friend</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @friendships.each do |friendship| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even')%>">
        <td>
          <%= friendship.friend.username %>
        </td>
        <td>
          <%= link_to "Unfollow", friendship_path(id: friendship.id), method: :delete  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>


