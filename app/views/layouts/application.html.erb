<!DOCTYPE html>
<html>
  <head>
    <title>Birdie</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <%= link_to image_tag("logo.png", alt: "Birdie", size:"150x150"), "/", {class: "websitelogo"} %>
  </header>

  <nav id="hoizontalNav">
    <%= link_to "Home", "/" %>
    <%= link_to "Feed", "/birds" %>
    <%= link_to "My Feed", "/birds/myshow" %>
    <% if current_user %>
      <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to 'Sign in', new_user_session_path %>
    <% end %>
  </nav>

  <body>
    <%= render 'layouts/alerts'%>
    <%= yield %>
  </body>
</html>
